<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" creationComplete="initSkin(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			protected function initSkin(event:FlexEvent):void {
				trackSkin.color = uint(mx.core.FlexGlobals.topLevelApplication.currentGroup.colour);
			}
			
		]]>
	</fx:Script>
	
	<s:Rect left="0" right="0" top="-1" height="10">
		<s:fill>
			<s:SolidColor id="trackSkin" />
		</s:fill>
	</s:Rect>

</s:Skin>
